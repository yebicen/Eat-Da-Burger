<header><img src="https://media.giphy.com/media/WBTUlyKBVlTTa/giphy.gif" width=200px; alt="Eat Da Burger"></header>
<h1>Eat Da Burger</h1>

<div id='available'>
<h2>MENU:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block readydevour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id='devoured'>
<h2>DEVOURED: </h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
   	<li>
     {{name}}
  	</li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div id='add'>
<h2>ADD BURGER</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">ADD BURGER</button>
</form>
</div>